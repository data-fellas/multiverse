{
  "id": "/spark-notebook",
  "cpus": 0.5,
  "mem": 4000,
  "instances": 1,
  "cmd": "JAVA_HOME=$(pwd)/jre1.7.0_76 && PATH=$PATH:$(pwd)/jre1.7.0_76/bin && cd spark-notebook-* && ./bin/spark-notebook -v -Dmanager.tachyon.enabled=false -Dhttp.port=$PORT0 -J-Xms4000m -J-Xmx4000m -Dmanager.notebooks.override.sparkConf.spark.mesos.executor.docker.image=\"mesosphere/spark:1.4.1-hdfs\" -Dmanager.notebooks.override.sparkConf.spark.master=\"mesos://zk://master.mesos:2181/mesos\" -Dmanager.notebooks.override.sparkConf.spark.mesos.executor.home=\"/opt/spark/dist\"",
  "uris": [
    "https://s3.eu-central-1.amazonaws.com/spark-notebook/tgz/spark-notebook-master-scala-2.10.4-spark-1.4.1-hadoop-2.4.0-with-hive-with-parquet.tgz",
    "https://downloads.mesosphere.com/java/jre-7u76-linux-x64.tar.gz"
  ],
  "env": {
   "MESOS_JAVA_NATIVE_LIBRARY": "/opt/mesosphere/lib/libmesos.so"
  },
  "acceptedResourceRoles": ["slave_public"],
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "/tree",
      "gracePeriodSeconds": 10,
      "intervalSeconds": 20,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "ports": [ {{spark-notebook.port}} ]
}